@{
}

@model IEnumerable<string>

    <div class="d-grid btn btn-dark">
        <a asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum="" class="btn btn-outline-secondary text-white">Home</a>


        @foreach (string t in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-bookType="@t" asp-route-pageNum="1" 
               class="btn text-white @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
        }

    </div>
 