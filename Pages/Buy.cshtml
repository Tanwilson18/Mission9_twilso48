@page
@model Mission9_twilso48.Pages.BuyModel
@{
}

<h1>Your Cart</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr> 
            <th>Items</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>SubTotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price</td>
                <td>@(i.Quantity * i.Book.Price)</td>

                <td class= "text-center">
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="BookId" value="@i.Book.BookId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>

                </td>
            </tr>

        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total: </td>
            <td> @Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>
<div class="">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Purchase</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Checkout">Check Out</a>
</div>