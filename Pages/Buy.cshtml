@page
@model Mission9_twilso48.Pages.BuyModel
@{
}

<h1>Your Cart</h1>

<table>
    <thead>
        <tr>
            <th>Items</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>SubTotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price</td>
                <td>@(i.Quantity * i.Book.Price)</td>
            </tr>

        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total: </td>
            <td> @Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>